<UserControl
    x:Class="CastPod.PlayerControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CastPod"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    
    <Grid>
        <MediaElement x:Name="MainMediaElement" />
        <Button VerticalAlignment="Top" Width="200" HorizontalAlignment="Center" Click="GoButton_Click">Go</Button>
        <TextBox x:Name="PathBox" VerticalAlignment="Bottom" HorizontalAlignment="Stretch"/>
    </Grid>
</UserControl>
